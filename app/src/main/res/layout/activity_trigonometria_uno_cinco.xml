<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asociacionfortin.neuroby.TrigonometriaUnoCinco">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">












            <TextView
                android:id="@+id/textIntroIgualdadesTrigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Las identidades trigonométricas son igualdades que se cumplen para cualesquiera valores del ángulo que aparece en la igualdad.\n\nLas más comunes son:\n\n\n\n"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@android:color/holo_blue_light" />





            <TextView
                android:id="@+id/textViewTitutloIdentidadesPitagoricas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identidades pitagóricas\n"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/imageViewIdentidadesTrigoPitagoricaUno"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/identidades_trigo_pitagorica_uno"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/imageViewIdentidadesTrigoPitagoricaDos"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/identidades_trigo_pitagorica_dos"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/imageViewIdentidadesTrigoPitagoricaTres"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/identidades_trigo_pitagorica_tres"
                android:layout_marginBottom="3dp"/>




            <TextView
                android:id="@+id/textViewTituloIdentidadesAdicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nSuma y diferencia de dos ángulos\n"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/imageViewIdentidadesTrigoSumaRestaUno"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/identidades_trigo_suma_resta_uno"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/imageViewIdentidadesTrigoSumaRestaDos"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/identidades_trigo_suma_resta_dos"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/imageViewIdentidadesTrigoSumaRestaTres"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/identidades_trigo_suma_resta_tres"
                android:layout_marginBottom="3dp"/>







            <TextView
                android:id="@+id/textViewTituloIdentidadesDoble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nDoble de un ángulo\n"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/imageViewIdentidadesTrigoDobleUno"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/identidades_trigo_suma_resta_uno"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/imageViewIdentidadesTrigoDobleDos"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/identidades_trigo_suma_resta_dos"
                android:layout_marginBottom="3dp"/>

            <ImageView
                android:id="@+id/imageViewIdentidadesTrigoDobleTres"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/identidades_trigo_suma_resta_tres"
                android:layout_marginBottom="3dp"/>















            <Button
                android:id="@+id/buttonInfo"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableTop="@drawable/comment_question_outline"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />


        </LinearLayout>






    </ScrollView>















    <TextView
        android:id="@+id/textViewInfoTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"


        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"



        android:layout_marginBottom="10dp"
        android:text="@string/descripcion_trigonometria_uno_cinco"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />















</RelativeLayout>
