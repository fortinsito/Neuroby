<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    tools:context="com.example.asociacionfortin.neuroby.RelajaLaNeurona">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonTips"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawableTop="@drawable/ic_relax_24dp"
            android:elevation="1dp"
            android:paddingTop="22dp"
            android:text="Tips/Consejos"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <Button
            android:id="@+id/buttonMemes"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawableTop="@drawable/ic_fire_24dp"
            android:elevation="1dp"
            android:paddingTop="22dp"
            android:text="Memes"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <Button
            android:id="@+id/buttonEstudianteColapsado"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawableTop="@drawable/ic_videogame_24dp"
            android:elevation="1dp"
            android:paddingTop="22dp"
            android:text="Estudiante colapsado"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


    </LinearLayout>


    <Button
        android:id="@+id/buttonInfo"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableTop="@drawable/comment_question_outline"


        />


</RelativeLayout>
