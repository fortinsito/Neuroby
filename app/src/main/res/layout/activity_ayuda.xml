<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asociacionfortin.neuroby.Ayuda">







    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/buttonApoyanos"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawableTop="@drawable/ic_favorite_24dp"
            android:elevation="1dp"
            android:paddingTop="22dp"
            android:text="Apóyanos"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <Button
            android:id="@+id/buttonContactanos"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawableTop="@drawable/ic_forum_24dp"
            android:elevation="1dp"
            android:paddingTop="22dp"
            android:text="Contáctanos"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <Button
            android:id="@+id/buttonConocenos"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawableTop="@drawable/ic_face_24dp"
            android:elevation="1dp"
            android:paddingTop="22dp"
            android:text="Conócenos"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
